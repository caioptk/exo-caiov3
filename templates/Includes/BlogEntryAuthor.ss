<div class="entry-author">
    <div class="author-info">
        <div class="author-avatar">
            <img src="$Author.ProfilePicture.URL" alt="$Author.Title">
        </div>
        <div class="author-description">
            <h6 class="author-name">$Author.Title</h6>
            <span class="designation">$Author.Job</span>
            <div class="author-biographical-info">
            $Author.Description
            </div>
        </div>
    </div>
</div>
